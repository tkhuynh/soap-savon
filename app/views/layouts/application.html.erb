<!DOCTYPE html>
<html>
<head>
  <title>SOAP Web Service</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="<%= current_page?(countries_path) ? '#' : countries_path %>">
      	<img src="http://donnellons.com.au/images/great-locations-ico.png" alt="World">
      </a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="<%= current_page?(countries_path) ? 'active' : '' %>">
        	<%= link_to "World's Countries", countries_path  %>
        </li>
        <li class="<%= current_page?(area_code_path) ? 'active' : '' %>">
        	<%= link_to "US Area Code", area_code_path %>
        </li>
      </ul>
    </div>
  </div>
</nav>
<%= yield %>
<%= javascript_include_tag 'application' %>
</body>
</html>